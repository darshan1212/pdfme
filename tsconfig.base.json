{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node", "jest", "@types/jest"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true
  },
}
